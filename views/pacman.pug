doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
    script(type='text/javascript', src='/javascripts/p5.js')
    title Pacman
  body.title
    .container-fluid
      script(type='text/javascript').
        var diameter = 40;
        var radius = diameter / 2;
        var x = radius;
        var y = radius;
        var xSpeed = 5;
        var ySpeed = 5;
        var xDirection = 1;
        var yDirection = 1;
        var numObjs = 1;
        var pacred = 55;
        var pacgreen = 0;
        var pacblue = 60;
        function init() {
        document.getElementById("xspeedval").value = document.getElementById("xspeed").value;
        document.getElementById("yspeedval").value = document.getElementById("yspeed").value;
        }
        function update () {
        document.getElementById("xspeedval").value = document.getElementById("xspeed").value;
        document.getElementById("yspeedval").value = document.getElementById("yspeed").value;
        }
      body.title(onload='init()')
        h1.title Pacman 
        .col-lg-12.col-sm-12
          ul.bar
            li
              a(href='/') Home
            li
              a(href='/pacman') Pacman
            li
              a(href='/database') Database
            li#right-side-button
              a(href='/signUp') Register
            li#right-side-button
              a(href='/login') Log In

        body.title
          form(action='', method='get')
            table.center(border='1')
              tr
                td X speed
                td
                  input#xspeed(type='range', min='0', max='20', step='1', onchange='update ()')
                td
                  input#xspeedval(name='xspeedval', type='text', size='2')
                td Y speed
                td
                  input#yspeed(type='range', min='0', max='20', step='1', onchange='update ()')
                td
                  input#yspeedval(name='yspeedval', type='text', size='2')
          
          body.title
            script(type='text/javascript').
              function setup() {
              //	commands placed here are executed once
              createCanvas(1410,480);
              ellipseMode(CENTER);
              angleMode(DEGREES);
              }
              
              function draw() {
              //	commands placed here are executed repeatedly
              background(150);
              for (c = 0; c < numObjs; ++c) {
              fill(pacred, pacgreen, pacblue);
              
              x += document.getElementById("xspeed").value * xDirection; //increase value of x
              y += document.getElementById("yspeed").value * yDirection; //increase value of y
              
              pacred = Math.floor(255*Math.random());
              pacgreen = Math.floor(255*Math.random());
              pacblue = Math.floor(255*Math.random());
              
              if ( (x > width - radius) || x < radius )
              xDirection = -xDirection;
              if ( (y > height - radius) || y < radius )
              yDirection = -yDirection;
              if (xDirection == 1)
              arc(x, y, diameter, diameter, 30, 330);
              else
              arc(x, y, diameter, diameter, 210, 150);
              }
              }
