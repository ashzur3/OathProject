doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
    link(href='https://use.fontawesome.com/releases/v5.0.6/css/all.css', rel='stylesheet')
    title Sign Up
  body.title
    .container-fluid
      // Header
      .row
        .col-lg-12.col-sm-12
          h1.title Sign Up
      .col-lg-12.col-sm-12
        ul.bar
          li
            a(href='/') Home
          li
            a(href='/pacman') Pacman
          li
            a(href='/database') Database
          li#right-side-button
            a(href='/signUp') Register 
          li#right-side-button
            a(href='/login') Log In
    p
    if error
        .alert.alert-danger Passwords must not match
    
    .row
        .col-lg-4.col-sm-12.offset-4
            form.form(method="post" action='/signUpUser' align='center')
                div.signup
                    |         Username:
                    br
                    input(type='text', name='username')
                    br
                    |         Email Address:
                    br
                    input(type='email', name='email')
                    br
                    |         Password:
                    br
                    input(type='password', name='passhash')
                    br
                    |         Confirm Password:
                    br
                    input(type='password', name='confirmPassword')
                    br
                    br
                    input(type='submit', value='Submit')
